units 		real
dimension 	3
processors 	* * *
boundary 	p p p
atom_style 	charge
atom_modify	map array

#pair_style     hybrid/overlay coul/long 10.0 table linear 10000 
pair_style     table linear 10000
read_data       tmp.dat
#pair_coeff     * * coul/long
pair_coeff     2 2 ../ff_fitting.table OO
pair_coeff     1 2 ../ff_fitting.table SiO
pair_coeff     1 1 ../ff_fitting.table SiSi

#kspace_style    pppm 1.0e-5
neighbor        2.0 bin
neigh_modify    every 1 check yes
timestep	1

dump 1 all custom 100000 sim.xyz id type x y z

thermo_style    custom step temp pe press pxx pyy pzz pxy pxz pyz lx ly lz xy yz xz density 
thermo          100000

##generate velocity
velocity        all create 3000 14452 
#velocity       all scale 0

#NVT run 
fix              1 all npt temp 3000 0.01 100 iso 0 0 1000
run              30000000
unfix            1

#fix             1 all nve
#fix             2 all temp/rescale 10 1 2000 1 1
#run             1000
#unfix           1 
#unfix           2

write_data      end.dat

